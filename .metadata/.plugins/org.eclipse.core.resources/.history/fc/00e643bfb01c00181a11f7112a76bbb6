	public static void main(String[] args) {
		
	System.out.println("Valor Máximo Byte: " + Byte.MAX_VALUE);
	System.out.println("Valor Mínimo Byte: " + Byte.MIN_VALUE);
	long x=152222222;
	  if(x>=Math.pow(-2, 63) && x<=Math.pow(2, 63)-1)System.out.println("* long");
      
